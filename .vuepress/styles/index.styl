.navbar {
  display: flex;
  justify-content: flex-end; // 从右边开始放置元素
  order: 1; // 将标志放在最左侧
  margin-left: auto; // 将剩余的空间放在标志的右侧
}

.navbar .nav-links {
  display: flex;
  order: 1;
  // 如果有需要，您可以增加或减少这里的间距
  margin-right: 20px;
}

.navbar .search-box {
  order: 2
  flex-shrink: 0; // 防止搜索框在窄屏幕上收缩
}

